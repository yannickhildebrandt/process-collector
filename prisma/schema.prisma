generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CONSULTANT
  EMPLOYEE
}

enum Language {
  DE
  EN
}

enum ProjectStatus {
  ACTIVE
  ARCHIVED
}

enum ProcessEntryStatus {
  DRAFT
  IN_PROGRESS
  COMPLETED
  VALIDATED
}

enum InterviewStatus {
  IN_PROGRESS
  SUMMARY_REVIEW
  COMPLETED
  STALE
}

enum MessageRole {
  ASSISTANT
  USER
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  name          String
  role          Role     @default(EMPLOYEE)
  preferredLang Language @default(EN)
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions           Session[]
  accounts           Account[]
  projectMembers     ProjectMember[]
  processEntries     ProcessEntry[]
  interviewSessions  InterviewSession[]

  @@map("user")
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id @default(uuid())
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id @default(uuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Project {
  id        String        @id @default(uuid())
  name      String
  industry  String
  status    ProjectStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  members            ProjectMember[]
  configuration      ProjectConfiguration?
  processEntries     ProcessEntry[]
  interviewSessions  InterviewSession[]
}

model ProjectMember {
  id        String @id @default(uuid())
  projectId String
  userId    String
  role      Role

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([userId])
}

model ProjectConfiguration {
  id                     String   @id @default(uuid())
  projectId              String   @unique
  industryClassification Json
  processCategories      Json
  customTerminology      Json?
  interviewTemplateRefs  Json?
  updatedAt              DateTime @updatedAt
  version                Int      @default(1)

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

model ProcessEntry {
  id                 String             @id @default(uuid())
  projectId          String
  createdById        String
  title              String
  status             ProcessEntryStatus @default(DRAFT)
  markdownContent    String?            @db.Text
  bpmnXml            String?            @db.Text
  interviewSessionId String?            @unique
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  project          Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy        User              @relation(fields: [createdById], references: [id])
  interviewSession InterviewSession? @relation(fields: [interviewSessionId], references: [id])

  @@index([projectId, status])
}

model InterviewSession {
  id                    String          @id @default(uuid())
  projectId             String
  employeeId            String
  processCategory       String
  title                 String
  status                InterviewStatus @default(IN_PROGRESS)
  currentSummaryJson    Json?
  messageRetentionUntil DateTime?
  createdAt             DateTime        @default(now())
  updatedAt             DateTime        @updatedAt

  project  Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  employee User     @relation(fields: [employeeId], references: [id])
  messages InterviewMessage[]
  processEntry ProcessEntry?

  @@index([projectId, employeeId])
  @@index([status])
}

model InterviewMessage {
  id                 String      @id @default(uuid())
  interviewSessionId String
  role               MessageRole
  content            String      @db.Text
  orderIndex         Int
  createdAt          DateTime    @default(now())

  interviewSession InterviewSession @relation(fields: [interviewSessionId], references: [id], onDelete: Cascade)

  @@index([interviewSessionId, orderIndex])
}

model LLMProviderConfig {
  id            String   @id @default(uuid())
  providerKey   String   @unique
  displayName   String
  apiEndpoint   String
  credentialRef String
  modelId       String
  maxTokens     Int      @default(4096)
  rateLimitRpm  Int?
  dpaActive     Boolean  @default(false)
  isDefault     Boolean  @default(false)
  createdAt     DateTime @default(now())
}
